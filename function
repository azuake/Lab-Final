#print inside function
def greeting(a,b):
    print(f"hello {a}")
    print(f"good morning {b}")
greeting("jonn", "mokles bhai")
greeting(10, "riyu")

print()
print()


#print outside function

def summation(a,b,c):
    sum = int(a)+int(b)+int(c)
    return sum

x,y,z = input("enter the values: ").split()
result = summation(x,y,z)
print(f"the summation is = {result}")

print()
print()

#finding the lengrh of a string

string = 'hello'
def length(a):
    for i in a:
        print(i)
length(string)

print()
print()

string = 'hello'
def length(a):
    count = 0
    for i in a:
        if (i == '\0'):
            break
        else:
            count = count + 1
    return count
result = length(string)
print(result)
